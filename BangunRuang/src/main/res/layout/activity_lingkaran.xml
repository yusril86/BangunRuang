<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bangundatar.yusril.anonym.bangunruang.lingkaran">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lingkaran"
        android:textSize="29sp"
        android:textColor="#ffff"
        android:background="#26dbff"
        android:textStyle="bold"
        android:padding="5dp"
        />
    <TextView
        android:background="@drawable/kotak3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lingkaran"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        />
    <TextView
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26dbff"
        android:text="Rumus-rumus"
        android:textSize="29sp"
        android:padding="5dp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rumuslingkaran"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contoh Soal"
        android:textSize="29sp"
        android:padding="5dp"
        android:background="#26dbff"
        android:textColor="#ffff"
        android:textStyle="bold"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/contohsoallingkaran"
    android:background="@drawable/kotak3"
    android:textSize="20sp"
    android:layout_margin="10dp"
    android:padding="5dp"
    />
    <Button
        android:onClick="hitunglingkaran"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        android:textSize="23sp"
        android:layout_gravity="center"
        android:padding="15dp"
        />
</LinearLayout>
</ScrollView>
