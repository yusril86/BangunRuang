<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".persegi">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26dbff"
        android:padding="5dp"
        android:text="Persegi"
        android:textColor="#ffffff"
        android:textSize="29sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/kotak"
        android:padding="12dp"
        android:text="@string/persegimateri"
        android:textColor="#f9f5f5"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26dbff"
        android:padding="5dp"
        android:text="Rumus-rumus"
        android:textColor="#ffffff"
        android:textSize="29sp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rumuspersegi"
        />
    <TextView
        android:padding="5dp"
        android:background="#26dbff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contoh soal"
        android:textSize="29sp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/contohsoalpersegi"
        android:background="@drawable/kotak3"
        android:padding="5dp"
        />
    <Button
        android:padding="15dp"
        android:id="@+id/btn_kalkulatorpersegi"
        android:onClick="hitungpersegi"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        android:layout_gravity="center"
        android:textSize="23sp"
        />

</LinearLayout>


</ScrollView>