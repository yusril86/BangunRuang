<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bangundatar.yusril.anonym.bangunruang.kalkulatorpersegipanjang">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:background="#53d160"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luas Persegi Panjang"
            android:textSize="29sp"
            android:textStyle="bold"
            android:padding="5dp"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/edt_panjang"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nilai (p)"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/edt_lebar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nilai (L)"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <Button
            android:id="@+id/btn_hitungpersegipanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hitung"
            android:textSize="29sp"
            android:padding="17dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_hasilpersegipanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hasil........."
            android:textSize="29sp"
            android:background="@drawable/kotakhitung"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_margin="17dp"
            />
        <TextView
            android:background="#53d160"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keliling Persegi Panjang"
            android:textSize="29sp"
            android:textStyle="bold"
            android:padding="5dp"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/edt_panjang2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nilai (p)"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/edt_lebar2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nilai (L)"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <Button
            android:id="@+id/btn_hitungkelilingpersegipanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hitung"
            android:textSize="29sp"
            android:padding="17dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_hasilkelilingpersegipanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hasil........."
            android:textSize="29sp"
            android:background="@drawable/kotakhitung"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_margin="17dp"
            />
    </LinearLayout>

</ScrollView>